// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  uid           Int      @id @default(autoincrement())
  username      String   @unique
  hash          String?
  avatar        String?  
  intra_id      Int      @unique
  dblauth       Boolean  @default(false)
  first_login   Boolean  @default(true)
  mail          String?  @unique
  status        String?  @default("online")
  title         String?  @default("A newbie pong player")
  max_score     Int      @default(0)
  friends       String[]
  blacklist     String[]
  groups        String[]
}

model friends {
    id Int @id @default(autoincrement())
    requester String @unique
    status String?
    friends String?
}
model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

model Profils {
    uid     Int @unique @default(autoincrement())
    image_url   String @unique
    hash        String?
    type        String?
    information String      @id @default(uuid())
}

model Game {
    id         Int             @unique @default(autoincrement())
    createdAt   DateTime        @default(now())
    isActive    Boolean         @default(false)
    score1      Int
    score2      Int
    player1Id   Int            @default(0)
    player2Id   Int            @default(1)
    winnerId    Int            @default(0)
}
